{
    "name": "autorebase",
    "version": "0.1.10",
    "description": "",
    "main": "src/index.ts",
    "files": [
        "action.yml",
        "dist"
    ],
    "scripts": {
        "build": "ncc build src/index.ts --minify --v8-cache",
        "test": "yarn lint && jest",
        "test:watch": "jest --watch",
        "lint": "eslint --ext js,ts,tsx src",
        "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,scss,md,graphl}\" --ignore-path .gitignore"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Label305/MyFirstGithubAction.git"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/Label305/MyFirstGithubAction/issues"
    },
    "homepage": "https://github.com/Label305/MyFirstGithubAction#readme",
    "dependencies": {
        "@actions/core": "^1.2.6",
        "@actions/exec": "^1.0.4",
        "@actions/github": "^2.2.0",
        "@octokit/types": "^4.1.5",
        "@octokit/webhooks": "^7.6.2",
        "@zeit/ncc": "^0.22.3",
        "github-rebase": "^1.1.0",
        "typescript": "^3.9.3"
    },
    "devDependencies": {
        "@types/jest": "^25.2.3",
        "@typescript-eslint/eslint-plugin": "^3.1.0",
        "@typescript-eslint/parser": "^3.1.0",
        "eslint": "^7.1.0",
        "eslint-config-prettier": "^6.11.0",
        "husky": "^4.2.5",
        "jest": "^26.0.1",
        "jest-each": "^26.0.1",
        "lint-staged": "^10.2.8",
        "prettier": "^2.0.5",
        "ts-jest": "^26.1.0"
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "prettier --write",
            "eslint --fix --ext js,ts,tsx src"
        ],
        "*.{json,css,scss,md,graphl,js,jsx}": [
            "prettier --write"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    }
}
